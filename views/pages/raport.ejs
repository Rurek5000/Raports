<%- include('../partials/head'), {title} %>
<h1 class="text-3xl font-bold text-gray-400">Raport</h1>

<form action="/raport" class="form" method="POST">
  <div class="form__row w-full">
    <label class="form__label" for="date">Data</label>
    <input
      class="form__input<%= errors && errors.date ? ' form__input--error' : '' %>"
      type="date"
      id="date"
      value="<%= formValue.date %>"
      name="date"
      value=""
      required
    />
    <span
      class="form__error<%= errors && errors.date ? ' form__error--visible' : '' %>"
      ><%= errors.date ? errors.date.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="weight">Waga</label>
    <input
      class="form__input<%= errors && errors.weight ? ' form__input--error' : '' %>"
      type="number"
      id="weight"
      value="<%= formValue.weight %>"
      name="weight"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.weight ? ' form__error--visible' : '' %>"
      ><%= errors.weight ? errors.weight.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="chest"
      >Obwód klatki piersiowej (linia sutkowa)</label
    >
    <input
      class="form__input<%= errors && errors.chest ? ' form__input--error' : '' %>"
      type="number"
      id="chest"
      value="<%= formValue.chest %>"
      name="chest"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.chest ? ' form__error--visible' : '' %>"
      ><%= errors.chest ? errors.chest.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="belly">Brzuch (linia pępka):</label>
    <input
      class="form__input<%= errors && errors.belly ? ' form__input--error' : '' %>"
      type="number"
      id="belly"
      value="<%= formValue.belly %>"
      name="belly"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.belly ? ' form__error--visible' : '' %>"
      ><%= errors.belly ? errors.belly.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="hips"
      >Biodra (w najszerszym miejscu):</label
    >
    <input
      class="form__input<%= errors && errors.hips ? ' form__input--error' : '' %>"
      type="number"
      id="hips"
      value="<%= formValue.hips %>"
      name="hips"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.hips ? ' form__error--visible' : '' %>"
      ><%= errors.hips ? errors.hips.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="biceps"
      >Obwód ramienia (linia bicepsa luzem):</label
    >
    <input
      class="form__input<%= errors && errors.biceps ? ' form__input--error' : '' %>"
      type="number"
      id="biceps"
      value="<%= formValue.biceps %>"
      name="biceps"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.biceps ? ' form__error--visible' : '' %>"
      ><%= errors.biceps ? errors.biceps.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="bicepsSec"
      >Obwód ramienia (linia bicepsa w napięciu):</label
    >
    <input
      class="form__input<%= errors && errors.bicepsSec ? ' form__input--error' : '' %>"
      type="number"
      id="bicepsSec"
      value="<%= formValue.bicepsSec %>"
      name="bicepsSec"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.bicepsSec ? ' form__error--visible' : '' %>"
      ><%= errors.bicepsSec ? errors.bicepsSec.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="thigh">Udo (w najszerszym miejscu):</label>
    <input
      class="form__input<%= errors && errors.thigh ? ' form__input--error' : '' %>"
      type="number"
      id="thigh"
      value="<%= formValue.thigh %>"
      name="thigh"
      min="0"
      required
    />
    <span
      class="form__error<%= errors && errors.thigh ? ' form__error--visible' : '' %>"
      ><%= errors.thigh ? errors.thigh.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="comfort"
      >Jakie jest twoje samopoczucie psychiczne / fizyczne?</label
    >
    <textarea
      class="form__input<%= errors && errors.comfort ? ' form__input--error' : '' %>"
      id="comfort"
      name="comfort"
      minlength="3"
      required
    >
<%= formValue.comfort %></textarea
    >
    <span
      class="form__error<%= errors && errors.comfort ? ' form__error--visible' : '' %>"
      ><%= errors.comfort ? errors.comfort.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="period"
      >Okres wystąpienia krwawienia miesiączkowego</label
    >
    <textarea
      class="form__input<%= errors && errors.period ? ' form__input--error' : '' %>"
      id="period"
      name="period"
      minlength="3"
    >
<%= formValue.period %></textarea
    >
    <span
      class="form__error<%= errors && errors.period ? ' form__error--visible' : '' %>"
      ><%= errors.period ? errors.period.msg : '' %></span
    >
  </div>

  <div class="form__row w-full">
    <label class="form__label" for="comments">Inne uwagi / problemy?</label>
    <textarea
      class="form__input<%= errors && errors.comments ? ' form__input--error' : '' %>"
      id="comments"
      name="comments"
      minlength="3"
    >
<%= formValue.comments %></textarea
    >
    <span
      class="form__error<%= errors && errors.comments ? ' form__error--visible' : '' %>"
      ><%= errors.comments ? errors.comments.msg : '' %></span
    >
  </div>

  <button type="submit" class="form__button">Wyślij</button>
  <input type="hidden" name="spreadsheetId" value="<%= spreadsheetId %>" />
</form>
<%- include('../partials/footer') %>
